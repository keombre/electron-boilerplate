{
    "extends": "tslint-config-standard",
    "rules": {
      "semicolon": [true, "never"],
      "curly": [true, "as-needed"],
      "indent": [true, "spaces"],
      "ter-indent": [true, 2],
      "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }]
    }
  }